@model IEnumerable<HedgeHogOtter.Models.Book>

@{
    ViewBag.Title = "Book Listings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Listings</h2>
<br />

@{ int i = 1; }
<div class="row">
    @foreach (var item in Model)
    {
        if ((i % 3) == 0)
        {
            @:<div class="row">
        }

        <div class="col-sm-4">
            <div class="card">
                <img class="card-img-top" src="http://www.pressedfortimelincoln.co.uk/wp-content/uploads/2013/05/placeholder1-1024x768.png" width=318 height=180 alt="Card image cap">
                <div class="card-block">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h4>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    <a href="#" class="btn btn-primary">Buy</a>
                </div>
            </div>
        </div>

        if ((i % 3) == 0)
        {
            @:</div><br /><br />
        }
        i++;
    }
</div>